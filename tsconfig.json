{
    "compilerOptions": {
        "outDir": "./lib",
        "module": "commonjs",
        "target" : "es5",
        "lib" : ["es2015"],
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noEmitHelpers": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ]
}
