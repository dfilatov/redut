{
    "defaultSeverity": "error",
    "rulesDirectory": [
        "./node_modules/tslint-consistent-codestyle/rules",
        "./node_modules/tslint-eslint-rules/dist/rules",
        "./node_modules/tslint-sonarts/lib/rules"
    ],
    "rules" : {
        "arrow-return-shorthand" : true,
        "array-bracket-spacing" : [true, "never"],
        "array-type" : [true, "array"],
        "ban-comma-operator" : true,
        "ban-types" : [true, ["JSX.Element", "Most likely you need to use 'vidom.Node'."]],
        "block-spacing" : [true, "always"],
        "brace-style" : [true, "stroustrup"],
        "class-name" : true,
        "curly" : true,
        "encoding" : true,
        "eofline" : true,
        "indent" : [true, "spaces", 4],
        "interface-over-type-literal" : true,
        "max-line-length" : [true, 120],
        "new-parens" : true,
        "naming-convention" : [
            true,
            { "type" : "genericTypeParameter", "prefix" : "T" }
        ],
        "no-all-duplicated-branches" : true,
        "no-arg" : true,
        "no-as-type-assertion" : true,
        "no-collapsible-if" : true,
        "no-collection-size-mischeck" : true,
        "no-consecutive-blank-lines" : true,
        "no-console" : true,
        "no-dead-store" : true,
        "no-duplicate-imports" : true,
        "no-duplicate-super" : true,
        "no-duplicate-switch-case" : true,
        "no-duplicate-variable" : true,
        "no-else-after-return" : true,
        "no-eval" : true,
        "no-gratuitous-expressions" : true,
        "no-ignored-initial-value" : true,
        "no-inferrable-types" : true,
        "no-invalid-template-strings" : true,
        "no-invariant-return" : true,
        "no-inverted-boolean-check" : true,
        "no-irregular-whitespace" : true,
        "no-misspelled-operator" : true,
        "no-multi-spaces" : true,
        "no-redundant-boolean" : true,
        "no-redundant-parentheses" : true,
        "no-statements-same-line" : true,
        "no-string-literal" : true,
        "no-trailing-whitespace" : true,
        "no-unnecessary-initializer" : true,
        "no-unnecessary-type-assertion" : true,
        "no-use-before-declare" : true,
        "no-use-of-empty-return-value" : true,
        "no-var-before-return" : true,
        "no-var-keyword" : true,
        "no-void-expression" : [true, "ignore-arrow-function-shorthand"],
        "object-curly-spacing" : [true, "always"],
        "object-literal-shorthand" : true,
        "prefer-conditional-expression" : true,
        "prefer-const" : true,
        "prefer-method-signature" : true,
        "prefer-object-spread" : true,
        "quotemark" : [true, "single", "jsx-double"],
        "radix" : true,
        "semicolon" : [true, "always"],
        "space-before-function-paren" : [true, "never"],
        "space-within-parens" : [true, "never"],
        "ter-newline-after-var" : [true, "always"],
        "ter-padded-blocks" : [true, "never"],
        "trailing-comma" : [true, { "multiline" : "never", "singleline" : "never" }],
        "triple-equals" : [true, "allow-null-check"],
        "typedef" : [true, "call-signature"],
        "typedef-whitespace": [
            true,
            {
                "call-signature" : "nospace",
                "index-signature" : "nospace",
                "parameter" : "nospace",
                "property-declaration" : "nospace",
                "variable-declaration" : "nospace"
            },
            {
                "call-signature" : "onespace",
                "index-signature" : "onespace",
                "parameter" : "onespace",
                "property-declaration" : "onespace",
                "variable-declaration" : "onespace"
            }
        ],
        "whitespace" : [
            true,
            "check-decl",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-type-operator",
            "check-preblock"
        ]
    }
}
